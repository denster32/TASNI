# TASNI Configuration
# Copy to .env and modify as needed
# See src/tasni/core/config_env.py for full list of supported variables

# Data paths (defaults use project root when empty)
TASNI_DATA_ROOT=.
TASNI_WISE_DIR=
TASNI_GAIA_DIR=
TASNI_CROSSMATCH_DIR=
TASNI_OUTPUT_DIR=
TASNI_LOG_DIR=
# TASNI_SECONDARY_DIR=
# TASNI_CHECKPOINT_DIR=
# TASNI_ARCHIVE_DIR=

# Pipeline
N_WORKERS=16
BATCH_SIZE=10000
TASNI_RANDOM_SEED=42
